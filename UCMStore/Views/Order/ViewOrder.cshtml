@model UCMStore.Models.OrderModel

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Product Name</label>
            <div class="col-md-3">
                <label class="form-control col-md-3">@Model.ProductName</label>
            </div>
            <label class="control-label col-md-2">Order Status</label>
            <div class="col-md-3">
                <label class="form-control col-md-3">@Model.OrderStatus</label>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Price</label>
            <div class="col-md-3">
                <label class="form-control col-md-3">$ @Convert.ToDecimal(Model.Price).ToString("0.##")</label>
            </div>
            <label class="control-label col-md-2">Quantity</label>
            <div class="col-md-3">
                <label class="form-control col-md-3">@Model.Quantity</label>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Total Price</label>
            <div class="col-md-3">
                <label class="form-control col-md-3">$ @Convert.ToDecimal(Model.Price * Model.Quantity).ToString("0.##")</label>
            </div>
            <label class="control-label col-md-2">Order Date</label>
            <div class="col-md-3">
                <label class="form-control col-md-3">@Model.OrderOn</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-default">Cancel Now</button>
            </div>
        </div>
    </div>
}