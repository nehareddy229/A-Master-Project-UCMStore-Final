
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

@model IEnumerable<UCMStore.Models.UserModel>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Active</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Mobile</td>
                    <td>@item.Active</td>
                    <td><a href="@Url.Action("Edit","Users",new { id=item.UserId})">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>